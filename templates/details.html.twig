{% extends "layout.html.twig" %}

{% block content %}
<div class="breadcrumbs">
    <a href=/>Homepage</a>
</div>

<h1>Details</h1>
<div class="product-details">
    <div>
        {% if bike.image %}<img src="/images/{{ bike.image }}">{% endif %}
    </div>
    <div>
        {{ bike.name }}
        ${{ bike.price }}
        <form method="POST">
        {% if inBasket %}
            <button disabled>Added to basket</button>
        {% else %}
            <button>Add to basket</button>
        {% endif %}
        </form>
    </div>
</div>

 {% if bike.description %}{{ bike.description }}{% endif %}
{% endblock %}